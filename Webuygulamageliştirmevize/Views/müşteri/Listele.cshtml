@model IEnumerable<Webuygulamageliştirmevize.Models.müşteri>

@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listele</h1>

<p>
    <a asp-action="yeni">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.ActionLink("guncelle", "guncelle", new {  id=item.Id }) |
                @Html.ActionLink("detay", "detay", new { id = item.Id }) |
                @Html.ActionLink("sil", "sil", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
